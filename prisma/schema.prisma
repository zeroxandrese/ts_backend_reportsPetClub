generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_CNN2")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  Name      String   @unique
  Password  String
  Lastlogin DateTime @default(now())

  @@map("users")
}

model Tokens {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  idTBOrigin String   @db.ObjectId
  token      String
  created    DateTime

  @@map("tokens")
}
