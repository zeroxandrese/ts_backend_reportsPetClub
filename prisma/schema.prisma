model CountLikes{
  uid     String @id @default(auto()) @map("_id") @db.ObjectId
  count   Int

  @@map("countLikes")
}

model CountReports{
  uid     String @id @default(auto()) @map("_id") @db.ObjectId
  count   Int

  @@map("countReports")
}

model CountAlerts{
  uid     String @id @default(auto()) @map("_id") @db.ObjectId
  count   Int

  @@map("countAlerts")
}

model CountComments{
  uid     String @id @default(auto()) @map("_id") @db.ObjectId
  count   Int

  @@map("countComments")
}


