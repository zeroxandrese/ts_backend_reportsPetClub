generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_CNN2")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  Name      String   @unique
  Lead      String  @default("Usr")
  Password  String
  Lastlogin DateTime @default(now())

  @@map("users")
}

model Tokens {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  idTBOrigin String   @db.ObjectId
  token      String
  created    DateTime

  @@map("tokens")
}

model CountUsers {
  uid     String @id @default(auto()) @map("_id") @db.ObjectId
  count   Int

  @@map("countUsers")
}

model CountPets {
  uid     String @id @default(auto()) @map("_id") @db.ObjectId
  count   Int

  @@map("countPets")
}

model CountImages {
  uid     String @id @default(auto()) @map("_id") @db.ObjectId
  count   Int

  @@map("countImages")
}

model CountVideos{
  uid     String @id @default(auto()) @map("_id") @db.ObjectId
  count   Int

  @@map("countVideos")
}

model CountPoints{
  uid     String @id @default(auto()) @map("_id") @db.ObjectId
